<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/dialog_loading_bg">

    <View
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_item_height"
            android:layout_marginBottom="@dimen/dialog_item_margintop"
            android:layout_marginTop="@dimen/dialog_item_marginbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="#ffffff"
            android:clickable="true"
            android:text="拍照"
            android:textSize="@dimen/dialog_text_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/get_photo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_item_height"
            android:layout_marginBottom="@dimen/dialog_item_margintop"
            android:layout_marginTop="@dimen/dialog_item_marginbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="#ffffff"
            android:text="相册图片"
            android:clickable="true"
            android:textSize="@dimen/dialog_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_item_height"
            android:layout_marginTop="@dimen/dialog_item_marginbottom"
            android:gravity="center"
            android:layout_gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="#ffffff"
            android:text="取消"
            android:clickable="true"
            android:textSize="@dimen/dialog_text_size"/>

    </LinearLayout>
</RelativeLayout>